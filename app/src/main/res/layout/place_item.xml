<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginStart="10dp"
                                   android:layout_marginEnd="10dp"
                                   android:layout_marginTop="10dp"
                                   app:cardBackgroundColor="@color/colorGreen"
                                   app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Lugar:"
                  android:textColor="@color/colorBlack"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:id="@+id/textView"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Veracruz"
                  android:textColor="@color/colorBlack"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="8dp"
                  android:id="@+id/tvPlaceAdapterPlaces"/>
        <TextView
                android:text="Latitud:"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
        <TextView
                android:text="000000000000"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLatAdapterPlaces" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPlaceAdapterPlaces" app:layout_constraintStart_toEndOf="@+id/textView2"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Longitud:"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPlaceAdapterPlaces" app:layout_constraintStart_toEndOf="@+id/tvLatAdapterPlaces"
                android:layout_marginStart="24dp"/>
        <TextView
                android:text="00000000000"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLongAdapterPlaces" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPlaceAdapterPlaces" app:layout_constraintStart_toEndOf="@+id/textView4"
                android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>